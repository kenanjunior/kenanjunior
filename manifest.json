{
    "manifest_version": 2,

    "name": "Kenan Junior",
    "description": "Official Google Chrome extension of KenanJunior.com.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },

    "icons": {
        "128": "icon.png",
        "64":  "icon.png",
        "32":  "icon.png",
        "16":  "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"]
        }
    ],

    "permissions": [
     "tabs", 
     "https://*/*"
    ]
}
